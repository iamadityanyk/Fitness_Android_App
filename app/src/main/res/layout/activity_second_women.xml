<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/women_fit"
    android:orientation="horizontal"
    tools:context=".Second_Activity_women">

    <androidx.cardview.widget.CardView
        android:id="@+id/Men_Chest"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="79dp"

        android:clickable="true"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/purple_200"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/full_body"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/womne_choose" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp"
            android:text="Full Body"
            android:textColor="#2C0606"
            android:textSize="20sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/WoMen_Arm"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="81dp"
        android:layout_marginEnd="25dp"
        android:layout_toEndOf="@+id/Men_Chest"
        android:clickable="true"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/purple_200"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/arm"
            android:layout_width="112dp"
            android:layout_height="77dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/women_arm" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp"
            android:text="Arm"
            android:textColor="#2C0606"
            android:textSize="24sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/WoMen_Chest"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_below="@+id/Men_Chest"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="24dp"
        android:layout_marginTop="86dp"
        android:layout_marginEnd="227dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/purple_200"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/chest"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/women_chest" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp"
            android:text="Chest"
            android:textColor="#2C0606"
            android:textSize="24sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/WoMen_Abs"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_below="@+id/Men_Chest"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="226dp"
        android:layout_marginLeft="41dp"
        android:layout_marginTop="91dp"
        android:layout_marginEnd="25dp"
        android:clickable="true"
        app:cardBackgroundColor="@color/purple_200"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/abs"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/women_abs" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp"
            android:text="Abs"
            android:textColor="#2C0606"
            android:textColorLink="#CFA7A7"
            android:textSize="24sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/WoMen_Leg"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="493dp"

        android:clickable="true"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/purple_200"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/leg"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/women_leg" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp"
            android:gravity="bottom|center_horizontal"
            android:text="Leg"
            android:textColor="#2C0606"
            android:textSize="24sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/WoMen_Back"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="41dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="486dp"
        android:layout_marginEnd="25dp"
        android:layout_toEndOf="@+id/Men_Chest"
        android:clickable="true"
        android:elevation="10dp"
        app:cardBackgroundColor="@color/purple_200"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="110dp"
            android:layout_height="70dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            app:srcCompat="@drawable/women_back" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="10dp"
            android:text="Back"
            android:textColor="#2C0606"
            android:textSize="24sp"
            android:textStyle="bold" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView7"
        android:layout_width="397dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="4dp"
        android:gravity="center_horizontal"
        android:text="Please Select Your Focus Area."
        android:textColor="#150101"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/Women_Confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="159dp"
        android:layout_marginBottom="36dp"
        android:backgroundTint="@color/purple_200"
        android:text="Confirm"
        android:textColor="#2C0606"
        android:textSize="16sp"
        android:textStyle="bold" />
</RelativeLayout>